(jbuild_version 1)

(library
 ((name      test_fs)
  (modules   (test_fs))
  (libraries (test irmin-fs))))

(executable
 ((name      test)
  (modules   (test))
  (libraries (test_fs))))

(alias
 ((name runtest)
  (package irmin-fs)
  (deps (test.exe))
  (action (run ${exe:test.exe} -q --color=always))))
